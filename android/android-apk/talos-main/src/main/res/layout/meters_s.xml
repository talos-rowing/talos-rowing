<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nargila="http://nargila.org/android"    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight=".5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/speed_meter_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#000000" >

            <LinearLayout
                android:id="@+id/speed_meter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/speed_avg"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:tag="extraView"
                        android:text="0:00"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <org.nargila.robostroke.android.common.AutoResizeTextView
                        android:textSize="@dimen/font_large_resize_max"
                        android:id="@+id/speed"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/auto_resize_margin_top"
        		        android:layout_marginBottom="@dimen/auto_resize_margin_bottom"                        
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:text="0:00"
                        
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout06"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="accuracyHighlighter" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:tag="extraLabel"
                        android:text="Avg" />

                    <TextView
                        android:id="@+id/speed_lable"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="/500m"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/spm_meter_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#000000" >

            <LinearLayout
                android:id="@+id/spm_meter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/spm_avg"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:tag="extraView"
                        android:text="00"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <org.nargila.robostroke.android.common.AutoResizeTextView
                        android:textSize="@dimen/font_large_resize_max"
                        android:id="@+id/spm"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".4"
                        android:layout_marginTop="@dimen/auto_resize_margin_top"
        		        android:layout_marginBottom="@dimen/auto_resize_margin_bottom"                        
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:tag="extraLabel"
                        android:text="Avg" >
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="SPM"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/distance_meter_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#000000" >

            <LinearLayout
                android:id="@+id/distance_meter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/distance_sub"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:tag="extraView"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <org.nargila.robostroke.android.common.AutoResizeTextView
                        android:id="@+id/distance_main"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".4"
                        android:layout_marginTop="@dimen/auto_resize_margin_top"
        		        android:layout_marginBottom="@dimen/auto_resize_margin_bottom"                        
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_large_resize_max"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/record_play_state_highlighter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/distance_label_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:tag="extraLabel"
                            android:text="Total" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:text="m"
                            android:textSize="14dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/time_meter_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#000000" >

            <LinearLayout
                android:id="@+id/time_meter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/stroke_stats"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:tag="extraView"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/stroke_count"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:paddingLeft="10dp"
                            android:tag="extraView"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="32dp"/>

                        <TextView
                            android:id="@+id/stroke_distance"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:paddingLeft="10dp"
                            android:tag="extraView"
                            android:text="0m"
                            android:textColor="#ffffff"
                            android:textSize="32dp"/>

                    </LinearLayout>

                    <org.nargila.robostroke.android.common.AutoResizeTextView
                        android:id="@+id/split_time"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/auto_resize_margin_top"
        		        android:layout_marginBottom="@dimen/auto_resize_margin_bottom"
                        android:text="0:0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_x_large_resize_max"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:tag="extraLabel"
                        android:text="Strokes" >
                    </TextView>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0:00:00"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:gravity="right"
                        android:text="Time"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>