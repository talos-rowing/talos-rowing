<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<FrameLayout android:id="@+id/spm_meter_container"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:layout_width="fill_parent" android:background="#000000"
		android:layout_weight="1"/>
	<FrameLayout android:layout_marginTop="1dp"
		android:id="@+id/time_meter_container" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="#000000"
		android:layout_weight=".92"/>
	<FrameLayout android:layout_weight="1"
		android:id="@+id/speed_meter_container" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="#000000"
		android:layout_marginTop="1dp"/>
	<FrameLayout android:id="@+id/distance_meter_container"
		android:layout_weight="1" android:layout_height="fill_parent"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:background="#000000" android:layout_marginTop="1dp"/>



</LinearLayout>
